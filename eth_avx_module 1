pragma solidity ^0.8.17;
contract ErrorHandlingexam {
   
    // uint public num = 0;
    uint a=5;

    function average_marks(uint num) public pure{
        assert(num!=0);
    }

    function total_marks(uint _numerator, uint _denomenator) public pure returns (uint){
        if(_numerator<_denomenator){
           
            revert("please provide numerator greater than denomenator");
            
        }
        return _numerator/_denomenator;
       

    }
    function passing_marks(uint k) public view returns (uint){
        require(k>0,"Value of a is zero , we don't want the result to be zero");
        return k*a;

    }

}
